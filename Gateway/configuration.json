{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  },

  "Routes": [
    {
      "DownstreamPathTemplate": "/api/departments",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/departments",
      "UpstreamHttpMethod": ["GET"]
    },


    {
